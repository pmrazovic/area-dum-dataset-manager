map.removeLayer(markers);

markers.clearLayers();
var checkIns = [<%= @check_ins.collect{|check_in| "[#{check_in.latitude},#{check_in.longitude}]" }.join(", ") %>];

for (var i = 0; i < checkIns.length; i++) {
	marker = new L.marker([checkIns[i][0],checkIns[i][1]]);
	markers.addLayer(marker);
}

map.addLayer(markers);

$('\#loader').hide();

$('#checkInHolderDiv').empty().append('<%= j render "check_ins" %>')