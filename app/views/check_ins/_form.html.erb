<%= form_for @check_in, :html => { :class => "form-horizontal check_in" } do |f| %>

    <% if @check_in.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@check_in.errors.count, "error") %> prohibited this check_in from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @check_in.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :deliverer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :deliverer_id, :class => 'form-control' %>
    </div>
    <%= error_span(@check_in[:deliverer_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'form-control' %>
    </div>
    <%= error_span(@check_in[:latitude]) %>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'form-control' %>
    </div>
    <%= error_span(@check_in[:longitude]) %>
  </div>
  <div class="control-group">
    <%= f.label :timestamp, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :timestamp, :class => 'form-control' %>
    </div>
    <%= error_span(@check_in[:timestamp]) %>
  </div>
  <div class="control-group">
    <%= f.label :section_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :section_id, :class => 'form-control' %>
    </div>
    <%= error_span(@check_in[:section_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            check_ins_path, :class => 'btn btn-default' %>

<% end %>
